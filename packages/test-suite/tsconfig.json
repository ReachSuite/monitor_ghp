{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2021",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "strict": true,
    "types": ["node"]
  },
  "include": ["src/"],
  "exclude": ["node_modules"]
}
